entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["bash", "-c", "python main.py & python web_app.py"]
deploymentTarget = "vm"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot (Updated)"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App Dashboard (Updated)"

[[workflows.workflow]]
name = "Web App Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Telegram Bot (Updated)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Web App Dashboard (Updated)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
